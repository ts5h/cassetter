{
  "name": "cassetter",
  "version": "0.1.1",
  "description": "UPD granular sampler",
  "main": "main.js",
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "concurrently \"run-p start:dev autobuild\" \"electron .\"",
    "start": "sirv public",
    "start:dev": "sirv public --dev",
    "package-mac": "electron-builder build --mac --publish never",
    "package-win": "electron-builder build --win --x64 --publish never",
    "package-linux": "electron-builder build --linux --x64 --publish never"
  },
  "author": "person0b",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.27.3",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.5",
    "sirv-cli": "^3.0.0",
    "svelte": "^4.2.19",
    "ws": "^8.18.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "tone": "^13.8.25"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "cassetter",
    "copyright": "Copyright Â© 2019 ${author}",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!src",
      "!data"
    ],
    "mac": {
      "icon": "public/icon.icns",
      "asar": true,
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "public/icon.ico",
      "target": "portable"
    },
    "directories": {
      "output": "dist"
    },
    "linux": {
      "icon": "public/icon.png"
    }
  }
}
